{
  "manifest_version": 3,
  "name": "Veri5Link",
  "version": "1.0",
  "description": "Scans web pages for valid, broken, and redirect links. Visual reports with colored highlights and downloadable summaries.",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "scripting",
    "activeTab",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
          "128": "icons/icon128.png",
          "48": "icons/icon48.png",
          "32": "icons/icon32.png",
          "16": "icons/icon16.png"

    },
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["contentStyles.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
